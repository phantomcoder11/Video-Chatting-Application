<body>

<div class="main">
<div class="main_left">
    <div class="main_vdo">
        <div id="video-grid"></div>
        
    </div>
    <div class="controls">
        <div class="blocks">
            <div  onclick="microphone()" class="buttons mute unmute">
                <i class="fas fa-microphone"></i>
                <span>Mute</span>
            </div>
            <div onclick="camera()" class="buttons camonoff">
                <i class="fas fa-video"></i>
                <span>Stop Video</span>
            </div>
        </div>
        <div class="blocks">
            <div class="copied">
            <span class="tooltiptext" id="myTooltip">Copy to clipboard</span>
            <div onclick="copyToClipboard()" onmouseout="outFunc()" class="buttons">
                
                <i class="far fa-copy"></i>
                <span>Copy Link</span>
 
            </div>
        </div>

                
            <div class="buttons" onclick="document.getElementById('id01').style.display='block'">
                <i class="fas fa-user-friends"></i>
                <span>Participants</span>
            </div>
            <div onclick="chats()" class="buttons chatbutton">
                <i class="fas fa-comment-slash red"></i>
                <span>Chat</span>
            </div>
        </div>
        <div class="blocks">
            <div class="buttons">
             
              <a href="/leftleft"><span class="leave">Leave Meeting</span></a>  
            </div>

        </div>
    </div>
</div>    
<div class="main_right disappear" id="main_right">
    <div class="header">
        <h5>CHATS</h5>
    </div>
    <div class="message_window">
        <div class="messages" id="show_message">

        </div>
   
    <div class="message_input">
        <input class="chat_input" type="text" placeholder="Type here">
    </div>
</div>
</div>    
</div>
<div id="id01" class="modal">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">Ã—</span>
    <form class="modalcontent" action="/action_page.php">
      <div class="container">
        <h1>Participants</h1>
        <p>The List of Active users</p>
       <div id="showUsers"></div>
        
      </div>
    </form>
  </div>
  
  <script>
  // Get the modal
  var modal = document.getElementById('id01');
  
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
  </script>
<script id="message_template" type="text/html">
    <!-- <div>
        <p>{{createdAt}} - {{message}}</p>
    </div> -->
    <div class="messagedisplay">
        <p>
            <span class="message__name">{{username}}</span>
            <span class="message__meta">{{createdAt}}</span>
        </p>
        <p>{{message}}</p>
    </div>
</script>

<script id="showUsersTemplate" type="text/html">
    <ul class="users">
        {{#users}}
            <li>{{username}}</li>
        {{/users}}
    </ul>
</script>
